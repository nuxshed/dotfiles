#!/bin/sh

# a simple todo script

TODOFILE=~/.todo
[ ! -r $TODOFILE ] && touch $TODOFILE

[ "$1" ] || exit 1

while [ "$1" ]; do
  case "$1" in 
    a | add | n | new)
      printf '%s\n' "$2" >> $TODOFILE
      exit ;;
    l | ls | list)
      while read -r line; do
        i=$((i+1))
        printf "\033[0;32m%s.\033[0m %s\n" "$i" "$line"
      done < "$TODOFILE"
      exit ;;
    d | done | complete)
      sed -i "$2 d" "$TODOFILE"
      exit ;;
    c | clear | clean)
      rm $TODOFILE
      exit ;;
    e | edit)
      $EDITOR $TODOFILE
      exit ;;
    +* | @*)
      grep "$1" $TODOFILE --color=auto -n -w
      exit ;;
  esac
done
