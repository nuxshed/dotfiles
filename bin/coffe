backup(){
cat << X0
[A[A[A[A[A[A[A[A[A[A[A[A[A[A[A[A[A[A[A
X0
}


steam(){
case "$1" in
"0")
cat << X0
    :  :  :  :  :  
     :  :  :  :  : 
     :  :  :  :  : 
    :  :  :  :  :  
X0
;;
"1")
cat << X0
     :  :  :  :  : 
     :  :  :  :  : 
    :  :  :  :  :  
    :  :  :  :  :  
X0
;;
"2")
cat << X0
     :  :  :  :  : 
    :  :  :  :  :  
    :  :  :  :  :  
     :  :  :  :  : 
X0
;;
"3")
cat << X0
    :  :  :  :  :  
    :  :  :  :  :  
     :  :  :  :  : 
     :  :  :  :  : 
X0
;;
esac
}

steam 1
cup

x=0
while :; do
  backup
  steam $x
  cup
  [ "$x" -le "2" ] && x=$((x+1)) || x=0
  sleep 0.25
done
